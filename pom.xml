<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>com.reinard</groupId>
	<artifactId>learn-hanzi</artifactId>
	<packaging>war</packaging>
	<version>1.0</version>
	<name>myhanzi</name>
	<url>ssh://reinardhz@git.code.sf.net/p/learn-hanzi/git</url>
	<description>A project to make me faster to learn Chinese characters</description>

	<properties>
		<jboss.eap.server.version>6.4.13.GA</jboss.eap.server.version>

		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<maven.compiler.source>1.7</maven.compiler.source>
		<maven.compiler.target>1.7</maven.compiler.target>

		<!-- -->
		<java.version>1.7</java.version>
		<org.springframework-version>3.2.18.RELEASE</org.springframework-version>
		<hibernate.version></hibernate.version>
	</properties>


	<build>
		<plugins>
			<!-- http://tomcat.apache.org/maven-plugin-2.2/ -->
			<!-- http://tomcat.apache.org/maven-plugin-trunk/context-goals.html -->
			<!-- to run, deploy and undeploy the embedded tomcat server -->
			<plugin>
				<groupId>org.apache.tomcat.maven</groupId>
				<artifactId>tomcat7-maven-plugin</artifactId>
				<version>2.2</version>
				<configuration>
				</configuration>
			</plugin>

		</plugins>
	</build>

	<dependencies>

		<!-- To use Spring MVC -->
		<dependency>
			<groupId>org.springframework</groupId>
			<artifactId>spring-webmvc</artifactId>
			<version>${org.springframework-version}</version>
		</dependency>

	</dependencies>

</project>
